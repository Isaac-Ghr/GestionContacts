{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Liste{% endblock %}

{% block body %}
<h1 class="text-center pt-2">Fiche du contact</h1>
<div class="row">
        <div class="card bg-secondary px-0 mb-3 container">
        <div class="card-header bg-dark">
            <h5 class="card-title text-center text-light">{{leContact.nom }} {{ leContact.prenom}}</h5>
        </div>
        <div class="row py-3 px-1">
            <div class="col col-5 d-flex allign-items-center">
                <img style="aspect-ratio: 1/1; width: 192px; margin: auto"
                class="rounded-circle"
                src="{{ leContact.avatar }}"
                draggable="false"/>
            </div>
            <div class="px-3 col">
                <h5 class="card-title">Coordonn√©es</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{leContact.rue}}</li>
                    <li class="list-group-item">{{leContact.cp}}, {{leContact.ville}}</li>
                    <li class="list-group-item">{{leContact.mail}}</li>
                    <li class="list-group-item">
                        <span class="badge rounded-pill badge-info bg-primary">
                            {% if leContact.sexe == 0 %}
                            homme
                            {% else %}
                            femme
                            {% endif %}
                        </span>
                        <span class="badge rounded-pill badge-info bg-secondary border">
                            <a href="{{ path('app_categorie', {'id': leContact.categorie.id}) }}">{{ leContact.Categorie.libelle }}</a>
                        </span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card-body">
        </div>
    </div>
</div>
<div class="d-flex justify-content-center">
    <a onclick="javascript:history.back()" class="btn btn-primary text-center w-25">Retour</a>
</div>
{% endblock %}
