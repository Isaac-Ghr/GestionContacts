{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Accueil{% endblock %}

{% block body %}
    <h1 class="text-center pt-2">Bienvenue</h1>
    <h3 class="text-center pt-2 text-primary">Que souhaitez-vous faire ?</h3>

    <div class="row mx-auto">
        <a class="btn btn-secondary col mx-1" href="{{path('app_contacts')}}">Consulter les contacts</a>
        <a class="btn btn-secondary col mx-1" href="{{path('app_categories')}}">Consulter les catégories</a>
    </div>

    <h3 class="text-center pt-2 text-primary">Statistiques</h3>
    <div class="row">
        <table class="table col mx-2">
            <thead>
                <tr>
                <th scope="col" colspan="3">Sexe</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                <th scope="row">Hommes</th>
                <td>{{ lesHommes|length }} / {{ ((lesHommes|length)/lesContacts)*100 }}%</td>
                </tr>
                <tr>
                <th scope="row">Femmes</th>
                <td>{{ lesFemmes|length }} / {{ ((lesFemmes|length)/lesContacts)*100 }}%</td>
                </tr>
                <tr>
                <th scope="row">Total</th>
                <td>{{ lesContacts }}</td>
                </tr>
            </tbody>
        </table>

        <table class="table col mx-2">
            <thead>
                <tr>
                <th scope="col" colspan="3">Catégories</th>
                </tr>
            </thead>
            <tbody>
                {% for categorie in lesCategories %}
                <tr>
                <th scope="row">{{categorie.libelle}}</th>
                <td>{{ categorie.contacts|length }} / {{ ((categorie.contacts|length)/lesContacts)*100 }}%</td>
                </tr>
                <tr>
                {% endfor %}
                <th scope="row">Total</th>
                <td>{{ lesContacts }}</td>
                </tr>
            </tbody>
        </table>
    </div>

{% endblock %}
